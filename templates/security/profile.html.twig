{% extends 'bashboard/base.html.twig' %}

{% block title %}Mon Compte{% endblock %}

{% block body %}
  <div class="card">
    <div class="card-title">
      <h4>Mon compte</h4>
    </div>
    <div class="card-body">
      <div class="col-md-8">
        {% for message in app.flashes('notice') %}
          <div class="alert alert-info flash-notice" role="alert">
            {{ message }}
          </div>
        {% endfor %}

        {{ form_start(form) }}
        <div class="my-custom-class-for-errors">
          {{ form_errors(form) }}
        </div>
        <div class="form-group">
          {{ form_label(form.firstName, 'Prenom', {'label_attr': {'class': 'foo'}}) }}
          {{ form_widget(form.firstName, {'attr': {'class': 'form-control input-default disabled', 'readonly':'true'}}) }}
        </div>
        <div class="form-group">
          {{ form_label(form.lastName, 'Nom', {'label_attr': {'class': 'foo'}}) }}
          {{ form_widget(form.lastName, {'attr': {'class': 'form-control input-default', 'readonly':'true'}}) }}
        </div>
        <div class="form-group">
          {{ form_label(form.email, 'Email', {'label_attr': {'class': 'foo'}}) }}
          {{ form_widget(form.email, {'attr': {'class': 'form-control input-default', 'readonly':'true'}}) }}
        </div>
        <div class="form-group">
          {{ form_label(form.password, 'Mot de passe', {'label_attr': {'class': 'foo'}}) }}
          {{ form_widget(form.password, {'attr': {'class': 'form-control input-default'}}) }}
        </div>
        <div class="form-group">
          {{ form_label(form.adresse, 'Adresse', {'label_attr': {'class': 'foo'}}) }}
          {{ form_widget(form.adresse, {'attr': {'class': 'form-control input-default'}}) }}
        </div>
        <div class="form-group">
          {{ form_label(form.departement, 'Departement', {'label_attr': {'class': 'foo'}}) }}
          {{ form_widget(form.departement, {'attr': {'class': 'form-control input-default'}}) }}
        </div>
        <div class="form-group">
          <label for="exampleFormControlTextarea1"> Solde Cong√©</label>
          <input type='text' class="form-control"  value= "{{ u.soldecong }}" disabled="true"/>



        </div>

        <button type="submit" class="btn btn-success float-right">Modifer</button>
        {{ form_end(form) }}
      </div>
    </div>
  </div>
{% endblock %}