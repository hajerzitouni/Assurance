{% extends 'bashboard/base.html.twig' %}
{% block body %}
    <div class="card text-center" style="width: 30rem;">
<div class="card-body">
    {{ form_start(form) }}
    <div class="my-custom-class-for-errors">
        {{ form_errors(form) }}
    </div>

    <div class="form-group">
        {{ form_row(form.description, {'attr': {'class': 'form-control input-default'}}) }}
    </div>
    {{ form_end(form) }}
</div>
    </div>
{% endblock %}