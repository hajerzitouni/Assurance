{% extends 'bashboard/base.html.twig' %}

{% block title %}Ajout d'un nouveau utilisateur{% endblock %}

{% block body %}
  <div class="card">
    <div class="card-title" style="text-align: center;">
      <h4>Ajout d'un nouveau utilisateur</h4>
    </div>
    <div class="card-body">
      {% for message in app.flashes('notice') %}
        <div class="alert alert-danger flash-notice" role="alert">
          {{ message }}
        </div>
      {% endfor %}
      <div class="col-md-8">
        {{ form_start(form) }}
        <div class="my-custom-class-for-errors">
          {{ form_errors(form) }}
        </div>
        <div class="form-group">
          {{ form_row(form.firstName, {'attr': {'class': 'form-control input-default'}}) }}
        </div>
        <div class="form-group">
          {{ form_row(form.lastName, {'attr': {'class': 'form-control input-default'}}) }}
        </div>

          <div class="form-group">
            {{ form_row(form.email, {'attr': {'class': 'form-control input-default'}}) }}
          </div>
        <div class="form-group">
          {{ form_row(form.adresse, {'attr': {'class': 'form-control input-default'}}) }}
        </div>

          <div class="form-group">
            {{ form_row(form.roles, {'attr': {'class': 'form-control input-default'}}) }}
          </div>

        <div class="form-group">
          {{ form_row(form.departement, {'attr': {'class': 'form-control input-default'}}) }}
        </div>
        {{ form_end(form) }}
      </div>

    </div>
  </div>
{% endblock %}
