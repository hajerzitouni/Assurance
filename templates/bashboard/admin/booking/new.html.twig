{% extends 'bashboard/base.html.twig' %}

{% block title %}New Booking{% endblock %}

{% block body %}
    <div class="card">
        <div class="card-title" style="text-align: center;">
            <h4>Ajouter un jour férié</h4>
        </div>
        <div class="card-body">
            {% for message in app.flashes('notice') %}
                <div class="alert alert-danger flash-notice" role="alert">
                    {{ message }}
                </div>
            {% endfor %}
            <div class="col-md-8">
                {{ form_start(form) }}
                <div class="my-custom-class-for-errors">
                    {{ form_errors(form) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.beginAt, {'attr': {'class': 'form-control input-default'}}) }}
                </div>
                <div class="form-group">
                    {{ form_row(form.title, {'attr': {'class': 'form-control input-default'}}) }}
                </div>

                <button class="btn">{{ button_label|default('Save') }}</button>
                {{ form_end(form) }}
            </div>

        </div>
    </div>
{% endblock %}


